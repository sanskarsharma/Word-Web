<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wordjungle.LevelsToPlay"
    
    android:background="@drawable/levs1"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Themes"
        
        
        android:background="@drawable/homepagestyle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="35dp"
        android:typeface="serif"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="19dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level2-Shapes"
        android:typeface="serif" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level1-Street"
        android:typeface="serif" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="14dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level5-Drugs"
        android:typeface="serif" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="15dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level3-Food"
        android:typeface="serif" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="15dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level4-Emotions"
        android:typeface="serif" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="14dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level6-Space"
        android:typeface="serif" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_below="@+id/button6"
        android:layout_marginTop="15dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="level7-Cartoons"
        android:typeface="serif" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button7"
        android:layout_below="@+id/button7"
        android:layout_marginTop="14dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level8-Countries"
        android:typeface="serif" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/button8"
        android:layout_below="@+id/button8"
        android:layout_marginTop="15dp"
        android:background="@drawable/levelsbuttonstyle"
        android:gravity="center"
        android:text="Level9-Computer Viruses"
        android:typeface="serif" />
    
</RelativeLayout>
